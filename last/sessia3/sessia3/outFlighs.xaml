<Page x:Class="sessia3.outFlighs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sessia3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="outFlighs">

    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="outName">
            <DataGrid.Columns>
                <DataGridTextColumn Header="From" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="To" Binding="{Binding Countries.Name}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}"/>
                <DataGridTextColumn Header="Flights number" Binding="{Binding Flieghs}"/>
                <DataGridTextColumn Header="Cabin price" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Numbers of stops" Binding="{Binding stops}"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
