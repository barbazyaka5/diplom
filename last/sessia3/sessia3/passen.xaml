<Page x:Class="sessia3.passen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sessia3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="passen">

    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Name="vad">
            <DataGrid.Columns>
                <DataGridTextColumn Header="first name" Binding="{Binding Firstname}"/>
                <DataGridTextColumn Header="last name" Binding="{Binding Lastname}"/>
                <DataGridTextColumn Header="birthdate" Binding="{Binding Users.Birthdate}"/>
                <DataGridTextColumn Header="passport number" Binding="{Binding PassportNumber}"/>
                <DataGridTextColumn Header="passport country" Binding="{Binding Users.LastName}"/>
                <DataGridTextColumn Header="phone" Binding="{Binding Phone}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
